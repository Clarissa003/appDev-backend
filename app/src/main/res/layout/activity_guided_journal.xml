<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background"
        tools:context=".GuidedJournalActivity">


        <TextView
            android:id="@+id/displayPrompt"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="44dp"
            android:background="@color/greenUltraDark"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingLeft="10dp"
            android:text="Some very deep question?"
            android:textColor="#212121"
            android:textStyle="italic"
            app:fontFamily="@font/altone"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/enterAnswer"
            android:layout_width="350dp"
            android:layout_height="614dp"
            android:layout_marginTop="4dp"
            android:gravity="top"
            android:hint="Enter answer..."
            android:minHeight="250dp"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textColorHint="#808080"
            android:textStyle="italic"
            app:fontFamily="@font/altone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.437"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/generatePromptButton" />

        <ImageView
            android:id="@+id/shareIcon"
            android:layout_width="37dp"
            android:layout_height="50dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_share"
            app:layout_constraintBottom_toBottomOf="@+id/enterAnswer"
            tools:layout_editor_absoluteX="228dp"
            tools:ignore="MissingConstraints" />
        <Button
            android:id="@+id/generatePromptButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate Prompt"
            app:layout_constraintTop_toBottomOf="@+id/displayPrompt"
            app:layout_constraintStart_toStartOf="@+id/displayPrompt" />
        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/greenUltraDark"
            android:fontFamily="@font/altone"
            android:text="Save"
            app:fontFamily="@font/altone"
            app:layout_constraintBottom_toBottomOf="@+id/enterAnswer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/shareIcon" />

        <!-- Buttons -->
        <Button
            android:id="@+id/buttonUnguidedJournal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to unguided journal page"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/saveButton"/>

        <Button
            android:id="@+id/buttonGuidedJournal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to guided journal page"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonUnguidedJournal"/>

        <Button
            android:id="@+id/buttonMoods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to moods"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/saveButton"/>

        <Button
            android:id="@+id/buttonHabits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to habits"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonMoods"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>