<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greenUltraLight">

    <LinearLayout
        android:id="@+id/moodImagesLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/happyButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/happy"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:onClick="onMoodButtonClick"
            android:contentDescription="happy_description"/>

        <ImageView
            android:id="@+id/contentButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/content"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:onClick="onMoodButtonClick"
            android:contentDescription="content_description"/>

        <ImageView
            android:id="@+id/neutralButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/neutral"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:onClick="onMoodButtonClick"
            android:contentDescription="neutral_description"/>

        <ImageView
            android:id="@+id/unhappyButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/unhappy"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:onClick="onMoodButtonClick"
            android:contentDescription="unhappy_description"/>

        <ImageView
            android:id="@+id/sadButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/sad"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:onClick="onMoodButtonClick"
            android:contentDescription="sad_description"/>
    </LinearLayout>

    <!-- Buttons -->

    <Button
        android:id="@+id/buttonMoods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/greenUltraDark"
        android:fontFamily="@font/gontserratmedium"
        android:text="Moods"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moodImagesLayout" />

    <Button
        android:id="@+id/buttonUnguidedJournal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/greenUltraDark"
        android:fontFamily="@font/gontserratmedium"
        android:text="Unguided journal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moodImagesLayout" />

    <Button
        android:id="@+id/buttonGuidedJournal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/greenUltraDark"
        android:fontFamily="@font/gontserratmedium"
        android:text="Guided journal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moodImagesLayout" />

    <Button
        android:id="@+id/buttonHabits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="108dp"
        android:backgroundTint="@color/greenUltraDark"
        android:fontFamily="@font/gontserratmedium"
        android:text="Habits"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonUnguidedJournal" />

    <Button
        android:id="@+id/buttonProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/greenUltraDark"
        android:fontFamily="@font/gontserratmedium"
        android:text="Profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.321"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonUnguidedJournal" />


</androidx.constraintlayout.widget.ConstraintLayout>
