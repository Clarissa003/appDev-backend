<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greenUltraLight">

    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/default_profile_picture"
        app:layout_constraintBottom_toTopOf="@id/profileName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Profile Name -->
    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/altone"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/profileDisplayData"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePicture" />

    <!-- Profile Display Data -->
    <TextView
        android:id="@+id/profileDisplayData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Placeholder for now"
        android:textColor="@android:color/white"
        android:fontFamily="@font/altone"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileName" />

    <!-- Buttons -->
    <Button
        android:id="@+id/buttonUnguidedJournal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to unguided journal page"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileDisplayData"/>

    <Button
        android:id="@+id/buttonGuidedJournal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to guided journal page"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileDisplayData"/>

    <Button
        android:id="@+id/buttonMoods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to moods"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonUnguidedJournal"/>

    <Button
        android:id="@+id/buttonHabits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to habits"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonGuidedJournal"/>

</androidx.constraintlayout.widget.ConstraintLayout>
