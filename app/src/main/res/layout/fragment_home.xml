<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- ScrollView for scrolling content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background">

        <!-- Vertical LinearLayout to hold all content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Container for Header -->
            <RelativeLayout
                android:id="@+id/idRLContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Heading TextView -->
                <TextView
                    android:id="@+id/idTVHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:fontFamily="@font/altone"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="DASHBOARD"
                    android:textAlignment="center"
                    android:textColor="@color/greenUltraDark"
                    android:textSize="35sp" />

                <!-- Selected Date TextView -->
                <TextView
                    android:id="@+id/idTVSelectedDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/idTVHeading"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Date"
                    android:textAlignment="center"
                    android:textColor="@color/greenUltraDark"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/altone" />

                <!-- Button to pick date -->
                <Button
                    android:id="@+id/idBtnPickDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/idTVSelectedDate"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@color/greenUltraDark"
                    android:fontFamily="@font/altone"
                    android:padding="10dp"
                    android:text="CHANGE DATE"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />
            </RelativeLayout>

            <!-- ConstraintLayout for mood buttons and RecyclerView -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Layout for mood buttons -->
                <LinearLayout
                    android:id="@+id/moodImagesLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <!-- Mood Buttons (ImageViews) -->
                    <ImageView
                        android:id="@+id/happyButton"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:contentDescription="happy_description"
                        android:scaleType="fitCenter"
                        android:src="@drawable/happy"
                        app:tint="#3F3F3F" />

                    <ImageView
                        android:id="@+id/contentButton"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:contentDescription="content_description"
                        android:scaleType="fitCenter"
                        android:src="@drawable/content"
                        app:tint="#3F3F3F" />

                    <ImageView
                        android:id="@+id/neutralButton"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:contentDescription="neutral_description"
                        android:scaleType="fitCenter"
                        android:src="@drawable/neutral"
                        app:tint="#3F3F3F" />

                    <ImageView
                        android:id="@+id/unhappyButton"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:contentDescription="unhappy_description"
                        android:scaleType="fitCenter"
                        android:src="@drawable/unhappy"
                        app:tint="#3F3F3F" />

                    <ImageView
                        android:id="@+id/sadButton"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:contentDescription="sad_description"
                        android:scaleType="fitCenter"
                        android:src="@drawable/sad"
                        app:tint="#3F3F3F" />
                </LinearLayout>

                <!-- RecyclerView for moods -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/moodRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/moodImagesLayout" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- CardView for daily habits -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <!-- Title for daily habits -->
                    <TextView
                        android:id="@+id/textViewTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/altone"
                        android:text="DAILY HABITS"
                        android:textColor="@color/white"
                        android:textSize="24sp" />

                    <!-- RecyclerView for habits -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/habitRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp" />

                    <!-- Button to add habit -->
                    <Button
                        android:id="@+id/buttonAddHabit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/greenUltraDark"
                        android:fontFamily="@font/altone"
                        android:padding="10dp"
                        android:text="Add Habit"
                        android:textColor="@android:color/white"
                        android:textSize="15sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CardView for daily journal entries -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <!-- Title for daily journal entries -->
                    <TextView
                        android:id="@+id/textViewTitleJournal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/altone"
                        android:text="DAILY ENTRIES"
                        android:textColor="@color/white"
                        android:textSize="24sp" />

                    <!-- RecyclerView for journal entries -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/JournalRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Placeholder FrameLayout for habits fragment -->
    <FrameLayout
        android:id="@+id/fragment_container_habits"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- FragmentContainerView for navigation host -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_graph" />

    <!-- BottomNavigationView for navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu" />
</RelativeLayout>
