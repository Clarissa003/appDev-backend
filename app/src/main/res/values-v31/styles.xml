<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashTheme" parent="Theme.SplashScreen">
        <!-- Set your splash screen image as the background -->
        <item name="android:windowSplashScreenBackground">@drawable/splash_screen_background</item>
        <!-- Remove the default icon -->
        <item name="android:windowSplashScreenAnimatedIcon">@null</item>
        <!-- Remove any animation -->
        <item name="android:windowSplashScreenAnimationDuration">0</item>
        <!-- Set the theme after the splash screen -->
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>
</resources>
